<div class="Userinfo">
  <h2>User info</h2>
  
  <div class="Userimag">
    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '100x100' %>
  </div>
  
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <p><%=link_to'編集', edit_user_registration_path(current_user.id) %></p>
</div>

<div class="New book">
  <h2>New Book</h2>
  <%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div class="Users">
  <h2>Bookdetail</h2>
  <table>
    <tbody>
      <tr>
         
       <td>titke</td>
       <td>opinion</td>
       <% @books.each do |book| %>
     <div>
     <%= link_to((attachment_image_tag book.user,:profile_image, format: 'jpeg', size: '50x50'),"/users/#{book.user.id}") %>
    <p>title：<%= book.title %></p>
    <p>orinion：<%= book.body %></p>
   </div>
<% end %>
       <td colspan="3"></td>
      </tr>
    </tbody>
  </table>
  
  
</div>
