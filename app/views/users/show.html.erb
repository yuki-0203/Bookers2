<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
 <% end %>


<div class="Userinfo">
  <h2>User info</h2>
  
  <div class="Userimag">
    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '100x100' %>
  </div>
  
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <p><%=link_to'編集', edit_user_registration_path(current_user.id) %></p>
</div>

<div class="New book">
  <h2>New Book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

  <%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div class="Users">
  <h2>Books</h2>
  <table>
    <tbody>
      <tr>
       <% @books.each do |book| %>
        <tb><%= link_to((attachment_image_tag book.user,:profile_image, format: 'jpeg', size: '50x50'),"/users/#{book.user.id}") %></tb>
        <tb><%= link_to(book.title,book_path(book.id))%></tb>
       <tb><%= book.body %></tb>
        <% end %>
       <td colspan="3"></td>
      </tr>
    </tbody>
  </table>
  
  
</div>
