<div class="Userinfo">
  <h2>User info</h2>
  
  <div class="Userimag">
    <%= attachment_image_tag @user, :image, format: 'jpeg', size: '100x100' %>
  </div>
  
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.profile %></th>
      </tr>
    </tbody>
  </table>
  <p><%=link_to'編集', edit_user_registration_path(current_user.id) %></p>
</div>

<div class="New book">
  <h2>New Book</h2>
  <%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>

