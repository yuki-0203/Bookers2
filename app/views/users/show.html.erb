
<div class="container">  
<div class="row">     
  <div class="col-lg-4">
    <%= render 'users/user' %>
   </div>
  
      <div class="col-lg-8"> 
        <div class="Books">
          <h2>Books</h2>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                <tr>
              </thead>
              <tbody>
                <tr>
                  <% @books.each do |book| %>
                    <td><% if @user.profile_image.present? %>
                         <%= link_to((attachment_image_tag book.user, :profile_image, format: 'jpeg', size: '50x50'),"/users/#{book.user.id}") %>
                        <% else %>
                        <%= link_to((image_tag 'default.png', size: '50x50'),"/users/#{book.user.id}") %>
                        <% end %></td>
                    <td><%= link_to(book.title,book_path(book.id))%></td>
                    <td><%= book.body%></td>
                </tr>
                   <% end %>
                
              </tbody>
            </table>
        </div>
      </div>
    </div>  
  </div>

