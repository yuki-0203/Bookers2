<main>
  <div class="container px-5 px-sm-0">  
    <div class="row">     
      <div class="col-md-3">
        <%= render 'users/user' %>
        
         <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-blok", method: :get do %>
             <i class="fas fa-user-cog"></i>
             <% end %>
        </div>
  
          <h2 class="mt-3">New book</h2>
          <div class="form-group">
              <%= form_with model: @book, local:true do |f| %>
                <h4>Title</h4>
                  <%= f.text_field :title , class:"form-control book_title" %>
                <h4>opinion</h4>
                  <%= f.text_area :body , class:"form-control book_body"%>
                <%= f.submit 'Create Book',class:"btn btn-success" %>
              <% end %>
            </div>
     </div>
      <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% @books.each do |book| %>
                      <td><% if @user.profile_image.present? %>
                           <%= link_to((attachment_image_tag book.user, :profile_image, format: 'jpeg', size: '50x50'),"/users/#{book.user.id}") %>
                          <% else %>
                          <%= link_to((image_tag 'default.png', size: '50x50'),"/users/#{book.user.id}") %>
                          <% end %></td>
                      <td><%= link_to(book.title,book_path(book.id))%></td>
                      <td><%= book.body%></td>
                  </tr>
                    <% end %>
                </tbody>
              </table>
   
      </div>
    </div>
  </div>
</main>