
<div class="container">  
<div class="row">     
  <div class="col-lg-4">
    <%= render 'users/user' %>
    
     <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction%></th>
      </tr>
    </tbody>
  </table>
    <div class="row">
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-blok", method: :get do %>
           <i class="fas fa-user-cog"></i>
       <% end %>
      
    </div>
  </div>


<div class="col-md-5 col-sm-10 rounded px-0 my-5">
<div class="New book">
  <h2 class="mt-3">New book</h2>
 
  </div>

  
    <div class="form-group">
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title , class:"form-control book_title" %>
        <h4>opinion</h4>
          <%= f.text_area :body , class:"form-control book_body"%>
        <%= f.submit 'Create Book',class:"btn btn-success" %>
      <% end %>
    </div>
</div>



   </div>
   
<div class="col-lg-8"> 
    <div class="Books">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
               <th>image</th>
               <th>name</th>
               <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><% if user.profile_image.present? %>
                    <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: '100x100' %>
                  <% else %>
                    <%= image_tag 'default.png', size: '100x100' %>
                  <% end %></td>
                <td><%=user.name%></td>
                <td><%= link_to'Show',user_path(user)%></td>
                 </tr>
               <% end %>
           
        </tbody>
      </table>
    </div>
  </div>

