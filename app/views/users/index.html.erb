
<div class="container">  
<div class="row">     
  <div class="col-lg-4">
    <%= render 'users/user' %>
   </div>
   
<div class="col-lg-8"> 
    <div class="Books">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
               <th>image</th>
               <th>name</th>
               <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><% if user.profile_image.present? %>
                    <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: '100x100' %>
                  <% else %>
                    <%= image_tag 'default.png', size: '100x100' %>
                  <% end %></td>
                <td><%=user.name%></td>
                <td><%= link_to'Show',user_path(user)%></td>
                 </tr>
               <% end %>
           
        </tbody>
      </table>
    </div>
  </div>

