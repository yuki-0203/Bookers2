<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
 <% end %>

<div class="Userinfo">
  <h2>User info</h2>
  
  <div class="Userimag">
    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '100x100' %>
  </div>
  
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction%></th>
      </tr>
    </tbody>
  </table>
  <p><%=link_to'編集', edit_user_registration_path(current_user.id) %></p>
</div>

<div class="New book">
  <%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div class="Books">
  <h2>Books</h2>
  <table>
    </thead>
     <th>image</th>
       <th>name</th>
       <th colspan="3"></th>
    </thead>
      <% @users.each do |f| %>
        <th><%= attachment_image_tag f, :profile_image, format: 'jpeg', size: '100x100' %></th>
        <th><%=f.name%></th>
        <th><%= link_to'show',user_path(f)%></th>
      <% end %>
    <tbody>
      
    </tbody>
  </table>
  
  
</div>
  