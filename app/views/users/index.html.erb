<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
 <% end %>

<div class="Userinfo">
  <h2>User info</h2>
  <div class="Userimag">
    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '100x100' %>
  </div>
  
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction%></th>
      </tr>
    </tbody>
  </table>
  <p><%=link_to'編集', edit_user_registration_path(current_user.id) %></p>
</div>

<div class="New book">
  <h2>New book</h2>
    <div class="alart">
       <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
      <% end %>
    </div>
    
    <div class="form">
      <%= form_with model: @book, local:true do |f| %>
        <p>Title</p>
          <%= f.text_field :title %>
        <p>opinion</p>
          <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
</div>

<div class="Books">
  <h2>Users</h2>
    <table>
      <thead>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
      </thead>
      <tbody>
        <% @users.each do |f| %>
          <th><%= attachment_image_tag f, :profile_image, format: 'jpeg', size: '100x100' %></th>
          <th><%=f.name%></th>
          <th><%= link_to'show',user_path(f)%></th>
        <% end %>
    </tbody>
  </table>
</div>
  