<div class="Userinfo">
  <h2>User info</h2>
    <div class="Userimag">
      <i class="fab fa-suse"></i>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '100x100' %>
    </div>
    
   <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction%></th>
      </tr>
    </tbody>
  </table>
    <%= link_to edit_user_registration_path(current_user.id), class: "btn btn-derk", method: :get do %>
         <i class="fas fa-user-cog"></i>
      <% end %>
</div>

<div class="col-md-5 col-sm-10 rounded px-0 my-5">
<div class="New book">
  <h2>New book</h2>
    <div class="alart">
       <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
      <% end %>
    </div>
  </div>
    
    <div class="form-group">
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>opinion</h4>
          <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: "btn btn-info" %>
      <% end %>
    </div>
</div>