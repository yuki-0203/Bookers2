  <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
  <% end %>
 
<div class="container">  
<div class="row">     
  <div class="col-lg-4">
    <%= render 'books/book' %>
  </div>
  
  <div class="col-lg-8"> 
      <div class="Books">
      <h2>Book detail</h2>
        <table class="table table-striped">
          <tbody>
            <tr>
              <td><%= link_to((attachment_image_tag @book_id.user, :profile_image, format: 'jpeg', size: '50x50'),"/users/#{@book_id.user.id}") %>
                 <br><%= link_to(@user.name,user_path(@user.id)) %>
              </td>
              <td><%= link_to(@book_id.title,book_path(@book_id.id))%></td>
              <td><%= @book_id.body %></td>
            <% if @book_id.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book_id) %></td>
              <td><%= link_to "Destroy", @book_id, method: :delete,data: { confirm: 'Are you sure?' }  %></td>
            </tr>
               <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>  