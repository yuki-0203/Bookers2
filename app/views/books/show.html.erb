<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
 <% end %>

<div class="Userinfo">
  <h2>User info</h2>
    <div class="Userimag">
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '100x100' %>
    </div>
   <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction%></th>
      </tr>
    </tbody>
  </table>
  <p><%=link_to'編集', edit_user_registration_path(current_user.id) %></p>
</div>


<div class="New book">
  <h2>New book</h2>
    <div class="alart">
       <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
      <% end %>
    </div>
    
    <div class="form">
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>opinion</h4>
          <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
</div>

<div class="Books">
<h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <tb><%= link_to((attachment_image_tag @book_id.user, :profile_image, format: 'jpeg', size: '50x50'),"/users/#{@book_id.user.id}") %>
           <br><%= link_to(@user.name,user_path(@user.id)) %>
        </tb>
        <tb><%= link_to(@book_id.title,book_path(@book_id.id))%></tb>
        <tb><%= @book_id.body %></tb>
      <% if @book_id.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book_id) %></td>
        <td><%= link_to "Destroy", @book_id, method: :delete,data: { confirm: 'Are you sure?' }  %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>
