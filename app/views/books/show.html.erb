<h1>投稿フォーム</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>orinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
<div>
  <%= link_to((attachment_image_tag book.user, :image, format: 'jpeg', size: '50x50'),"/users/#{book.user.id}") %>
  <p>title：<%= book.title %></p>
  <p>orinion：<%= book.title %></p>
</div>
<% end %>