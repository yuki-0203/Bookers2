
<div class="container  px-5 px-sm-0">  
<div class="row">     
  <div class="col-md-3">
    <%= render 'books/book' %>
  </div>

  <div class="col-md-8 offset-md-1"> 
      <div class="Books">
      <h2>Book detail</h2>
        <table class="table table-striped">
          <tbody>
            <tr>
              <td>
                <td><% if @user.profile_image.present? %>
                         <%= link_to((attachment_image_tag @book_id.user, :profile_image, format: 'jpeg', size: '50x50'),"/users/#{@book_id.user.id}") %>
                        <% else %>
                        <%= link_to((image_tag 'default.png', size: '50x50'),"/users/#{@book_id.user.id}") %>
                        <% end %>
                 <br><%= link_to(@user.name,user_path(@user.id)) %>
              </td>
              <td><%= link_to(@book_id.title,book_path(@book_id.id))%></td>
              <td><%= @book_id.body %></td>
            <% if @book_id.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book_id),class:"btn btn-success" %></td>
              <td><%= link_to "Destroy", @book_id, method: :delete,data: { confirm: 'Are you sure?' },class:"btn btn-danger"  %></td>
            </tr>
               <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>  

