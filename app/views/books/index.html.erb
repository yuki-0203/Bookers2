<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
 <% end %>
 
  
 <div class="Userinfo">
  <h2>User info</h2>
    <div class="Userimag">
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '100x100' %>
    </div>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <p><%=link_to'編集', edit_user_registration_path(current_user.id) %></p>
</div>


<div class="New book">
  <h2>New book</h2>
    <div class="alart">
       <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
      <% end %>
    </div>
    
    <div class="form">
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>opinion</h4>
          <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
</div>


<div class="Books">
  <h2>Books</h2>
    <table>
      <thead>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <th><%= link_to((attachment_image_tag book.user, :profile_image, format: 'jpeg', size: '50x50'),"/users/#{book.user.id}") %></th>
          <th><%= link_to(book.title,book_path(book.id))%></th>
          <th>orinion：<%= book.body%></th>
        <% end %>
      </tbody>
    </table>
</div>