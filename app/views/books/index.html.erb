<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
 <% end %>


<h1>投稿フォーム</h1>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>orinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<% @books.each do |book| %>
<div>
  <%= link_to((attachment_image_tag book.user, :profile_image, format: 'jpeg', size: '50x50'),"/users/#{book.user.id}") %>
  <p><%= link_to(book.title,book_path(book.id))%></p>
  <p>orinion：<%= book.body %></p>
</div>
<% end %>