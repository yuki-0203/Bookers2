<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/c3fbb4b704.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
    <nav class="navbar navbar-expand navbar-light bg-info">
     <ul class="navbar-nav mr-auto">　
      <h1>bookers<i class="fas fa-book"></i></h1>
      <% if user_signed_in? %>
    </ul>　
     <ul class="navbar-nav">
        <li　class="nav-item">
        <i class="fas fa-igloo"></i>
        <%= link_to 'Home', user_path(current_user.id) %>
        </li>
        <li　class="nav-item">
          <i class="fas fa-child"></i>
        <%= link_to 'Users', users_path %>
        </li>
        <li　class="nav-item">
          <i class="fas fa-book-open"></i>
        <%= link_to 'Book', books_path%>
        </li>
        <li　class="nav-item">
          <i class="fas fa-sign-out-alt"></i>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li　class="nav-item">
          <%= link_to "Log in", new_user_session_path %>
        </li>
        <li　class="nav-item">
          <%= link_to "Sign up", new_user_registration_path %>
        </li>
      <% end %>
    </ul>
  </nav>
  </header>
    <%= yield %>
  </body>
  
  <footer>
    <div class="mx-auto" style="width: 200px;">
      <p>Copyright Infratop.inc</p>
    </div>
  </footer>
</html>
